<dl>
  <dt><label for="tuning_amount">Amount:</label></dt>
  <dd><input name="tuning[amount]" id="tuning_amount" type="text" class="textfield" value="{$tuning->amount}" /></dd>
  <dt><label for="tuning_direction">Direction:</label></dt>
  <dd>
    <select name="tuning[direction]" id="tuning_direction">
      <option value="raise" {if $tuning->direction == "raise"} selected="selected"{/if}>raise </option>
      <option value="lower" {if $tuning->direction == "lower"} selected="selected"{/if}>lower</option>
    </select>
  </dd>
</dl>